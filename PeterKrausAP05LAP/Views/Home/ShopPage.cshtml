@model List<VM_Product>

    <div class="container-fluid">
        @for (int i = 0; i < Model.Count; i += 3)
        {
        <div class="row">

            <div class="col-md-4">
                <h1>@Model[i].ProductName</h1>
                <img class="card-img-top" src="@Model[i].HeaderImgPath" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title">@Model[i].ProductName</h5>
                    <p class="card-text">@Model[i].ShortDescription</p>
                    <a href="@Url.Action("ProductDetail", "Home",new {id = Model[i].Id})" class="btn btn-info">more..</a>
                </div>
                <div class="card-footer">
                    <small class="text-muted">Last updated 3 mins ago</small>
                </div>
            </div>
            @if (i + 1 < Model.Count)
            {
                <div class="col-md-4">
                    <h1>@Model[i + 1].ProductName</h1>
                    <img class="card-img-top" src="@Model[i+1].HeaderImgPath" alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title">@Model[i + 1].ProductName</h5>
                        <p class="card-text">@Model[i + 1].ShortDescription</p>
                        <a href="@Url.Action("ProductDetail", "Home",new {id = Model[i+1].Id})" class="btn btn-info">more..</a>
                    </div>
                    <div class="card-footer">
                        <small class="text-muted">Last updated 3 mins ago</small>
                    </div>
                </div>
            }
            @if (i + 2 < Model.Count)
            {
                <div class="col-md-4">
                    <h1>@Model[i + 2].ProductName</h1>
                    <img class="card-img-top" src="@Model[i+2].HeaderImgPath" alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title">@Model[i + 2].ProductName</h5>
                        <p class="card-text">@Model[i + 2].ShortDescription</p>
                        <a href="@Url.Action("ProductDetail", "Home",new {id = Model[i+2].Id})" class="btn btn-info">more..</a>
                    </div>
                    <div class="card-footer">
                        <small class="text-muted">Last updated 3 mins ago</small>
                    </div>
                </div>
            }

        </div>
        }
    </div>




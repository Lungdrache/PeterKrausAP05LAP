@model PeterKrausAP05LAP.ViewModels.VM_ProductDetail

@{
    ViewBag.Title = "ProductDetail";
}
<!-- Header Areal BEGINN -->
<div class="container-fluid col-md-12 form-group form-inline header-container">

    <img class="img-center fill" 
         src="@Url.Content(Model.imageHeaderPath)" 
         alt="Header Img @Model.productName"/>
    <div class="header-text">
        <h1 style="background-color:lightgray;opacity:0.8;padding-left:10px;padding-right:10px">
            @Model.productName
        </h1>
    </div>

</div>
<!-- Header Areal END -->
 
<!-- Trailer Areal BEGINN --> 
<div class="row form-group ">
    <div class="container-fluid">

        <!-- Video BEGINN -->
        <div class="col-md-6 trailer-content">
            <video tag="video" class="fill" controls="controls" autoplay>
                <source src="@Url.Content(Model.videoPath)" type="video/webm" />
            </video>
        </div>
        <!-- Video END -->

        <!-- Slider BEGINN -->
        <div class=" col-md-6" >

            <div id="myCarousel" class="carousel slide" data-interval="2000" data-ride="carousel">

                <div class="carousel-inner trailer-content">
                    @for (int i = 0; i < Model.imagePaths.Count; i++)
                    {
                        if (i == 0)
                        {
                            <div class="item active">
                                <img class="fill" src="@Model.imagePaths[i]" alt="Game image @i">
                            </div>
                        }
                        else
                        {
                            <div class="item trailer-content">
                                <img class="fill" src="@Model.imagePaths[i]" alt="Game image @i">
                            </div>
                        }
                    }

                </div>
                <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="right carousel-control" href="#myCarousel" data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div> 
        </div>
        <!-- Slider END -->
    </div>
</div>
<!-- Trailer Areal END --> 
<!-- Body BEGINN --> 
<div class="row">
    <h4>@Model.productName</h4>

    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.productName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.productName)
        </dd>

    </dl>
    <p>
        @Html.ActionLink("Zurück zum Shop", "ShopPage")
    </p>
</div>
<!-- Body END --> 

<script>
    // mute the video before autoplay
    document.getElementsByTagName('video')[0].volume = 0.0;
</script>
